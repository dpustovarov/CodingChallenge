{
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "require-jsdoc": "off",
        "no-var": "off",
        "max-len": [
            "error",
            120
        ],
        "padded-blocks": "off",
        "space-infix-ops": "error"
    }
}
